@page "/teams"


<h3 style="color:@Color">TeamsComponent</h3>


<table class="table">

    <tr>
        <th>Team</th>
        <th>Region</th>
    </tr>

    @foreach(var team in teams)
    {
        <tr>
            <td><a href=" @(  $"/team/{team.Id}"  )  " class="nav-link">@team.Name</a></td>
            <td>@team.Region</td>
        </tr>
    }

</table>



<br/><br/><br/>

<type="text" @bind-value="Color"/>


@code {

    [CascadingParameter(Name ="Color")]
    public string Color{ get; set; }

    private List<Team> teams;
    
    protected override void OnInitialized()
    {
        base.OnInitialized();

        teams = new List<Team>();
        teams.Add(new Team { Id = 1, Name = "Red", Region = "Region One" });
        teams.Add(new Team { Id = 2, Name = "Blue", Region = "Region Two" });
        teams.Add(new Team { Id = 3, Name = "Yellow", Region = "Region Three" });

       

    }



}
